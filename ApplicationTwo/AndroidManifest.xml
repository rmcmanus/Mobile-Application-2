<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.mines.rmcmanus.dhunter.applicationtwo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/baseballtrans"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.mines.rmcmanus.dhunter.applicationtwo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.mines.rmcmanus.dhunter.applicationtwo.SelectPlayerActivity"
            android:label="@string/title_activity_select_player"
            android:parentActivityName="edu.mines.rmcmanus.dhunter.applicationtwo.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mines.rmcmanus.dhunter.applicationtwo.MainActivity" />
        </activity>
        <activity
            android:name="edu.mines.rmcmanus.dhunter.applicationtwo.StatsActivity"
            android:label="@string/title_activity_stats" >
        </activity>
        <activity
            android:name="edu.mines.rmcmanus.dhunter.applicationtwo.AddPlayerActivity"
            android:label="@string/title_activity_add_player"
            android:parentActivityName="edu.mines.rmcmanus.dhunter.applicationtwo.SelectPlayerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.mines.rmcmanus.dhunter.applicationtwo.SelectPlayerActivity" />
        </activity>
    </application>

</manifest>